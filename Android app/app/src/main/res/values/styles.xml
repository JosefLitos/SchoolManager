<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
        <item name="colorPrimary">@color/colorPrimaryFg</item>
        <item name="colorPrimaryDark">@color/colorPrimaryBg</item>
        <item name="android:textColor">@color/colorPrimaryFg</item>
        <item name="background">@color/colorPrimaryBg</item>
        <item name="colorAccent">@color/colorPrimaryHeader</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#3a8010</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>
