<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
        <item name="colorPrimary">@color/colorPrimaryFg</item>
        <item name="colorPrimaryDark">@color/colorPrimaryBg</item>
        <item name="android:textColor">@color/colorPrimaryFg</item>
        <item name="background">@color/colorPrimaryBg</item>
        <item name="colorAccent">@color/colorPrimaryHeader</item>
    </style>

    <style name="AppThemeDark" parent="Platform.ThemeOverlay.AppCompat.Dark">
        <item name="android:windowBackground">@color/colorSecondaryBg</item>
        <item name="android:colorForeground">@color/colorSecondaryFg</item>
        <item name="android:colorForegroundInverse">@color/colorSecondaryBg</item>
        <item name="android:colorBackground">@color/colorSecondaryBg</item>

        <item name="android:textColor">@color/colorSecondaryFg</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item></style>

</resources>
