<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#888" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_trl_header"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:paddingTop="3dp"
            android:textColor="#D000"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/item_adder_remove"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:src="@drawable/ic_cancel_round" />
    </LinearLayout>

    <EditText
        android:id="@+id/item_adder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/outline_gray"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginHorizontal="10dp"
        android:text="@string/description"
        android:textColor="#D000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/item_adder_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/outline_gray"
        android:textSize="15sp" />
</LinearLayout>