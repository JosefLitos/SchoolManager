<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/explorer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#8000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/objects_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_cancel"
            android:gravity="center"
            android:text="@string/objects_cancel"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/select_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_check_all"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="@string/select_all"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/objects_select"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_check_disabled"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="@string/select"
            android:textColor="#FFF" />
    </LinearLayout>
</LinearLayout>