<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/objects_path_handler"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/colorPrimaryHeader">

            <LinearLayout
                android:id="@+id/objects_path"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <ScrollView
            android:id="@+id/objects_info_handler"
            android:layout_width="match_parent"
            android:layout_height="0px">

            <TextView
                android:id="@+id/objects_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="3dp"
                android:paddingEnd="3dp" />
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#888" />

        <SearchView
            android:id="@+id/objects_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/outline_black"
            android:queryHint="@string/search" />

        <ListView
            android:id="@+id/objects_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#8000"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/objects_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_cancel"
                android:gravity="center"
                android:text="@string/objects_cancel"
                android:textColor="#FFF" />

            <TextView
                android:id="@+id/select_all"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_check_all"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="@string/select_all"
                android:textColor="#FFF" />

            <TextView
                android:id="@+id/objects_select"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_check_disabled"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="@string/select"
                android:textColor="#FFF" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/touch_outside"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>